{{#auth-form title="Reset Your Password" errorMessage=errorMessage}}
  {{#if isRegistered}}
    <div class="panel panel-success">
      <div class="panel-heading">Success</div>
      <div class="panel-body">
        Your password has been changed. Please log in.
      </div>
    </div>
  {{else}}
    <form {{action 'submitForm' on='submit'}}>
      {{auth-input
        type='password'
        value=newPassword
        placeholder='New Password'}}
      {{suggest-link
        suggest-text="Need an account?"
        link-name="signup"
        link-pretty="Sign Up"}}
      {{submit-button loading=isProcessing}}
    </form>
  {{/if}}
{{/auth-form}}