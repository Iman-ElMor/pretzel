{{!--<p>or login with OAuth 2.0 <em>Resource Owner Password Credentials</em>:</p>--}}
{{#auth-form title="Log In" errorMessage=errorMessage}}
  <form {{action 'authenticateWithBasic' on='submit'}}>
    <div class="form-group">
      {{input
        type='text'
        value=identification
        placeholder='Email Address'
        class='form-control'}}
    </div>
    <div class="form-group">
      {{input
        type='password'
        value=password
        placeholder='Password'
        class='form-control'}}
    </div>
    {{suggest-link
      suggest-text="Forgotten your password?"
      link-name="reset-request"
      link-pretty="Reset Password"}}
    {{suggest-link
      suggest-text="Need an account?"
      link-name="signup"
      link-pretty="Sign Up"}}   
    {{submit-button loading=isProcessing}}
  </form>
{{/auth-form}}
