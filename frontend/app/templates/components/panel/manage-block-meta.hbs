{{entry.name}}
{{elem/icon-acl record=entry}}

{{#if entry.owner}}
  {{#elem/dropdown-container
    right=true}}
    {{#elem/dropdown-row
      icon="lock"
      onClick=(action 'flipPublic' entry)}}
      {{#if entry.public}}
      Make Private
      {{else}}
      Make Public
      {{/if}}
    {{/elem/dropdown-row}}
    {{#elem/dropdown-row
      icon="pencil"
      onClick=(action 'flipReadOnly' entry)}}
      {{#if entry.readOnly}}
      Make Editable
      {{else}}
      Make Read-Only
      {{/if}}
    {{/elem/dropdown-row}}
    {{elem/dropdown-separator}}
    {{#elem/dropdown-row
      icon="remove"
      onClick=(action "deleteRecord" entry)}}
      Delete
    {{/elem/dropdown-row}}
  {{/elem/dropdown-container}}
{{/if}}