<div style="display: flex;">
  <span>Selected Features</span>
  <span class="badge">{{selectedFeatures.length}}</span>

  <div style="margin-top: -10px;">
    {{!--
                                                   Leftwards Arrow	←	←	&#x2190;
                                                   Rightwards Arrow	→	→	&#x2192;
                                                   --}}
    <div style="position: absolute;"><a href="#" {{action "toSelectedFeatures" on='click'}}>&#x2190;</a></div>
    <div style="padding-top: 13px;padding-left: 7px;"><a href="#" {{action "fromSelectedFeatures" on='click'}}>&#x2192;</a></div>
    {{!--
    <div><a >{{elem/icon-base name="arrow-left" click=(action "toSelectedFeatures") }}</a></div>
    <div><a >{{elem/icon-base name="arrow-right"  click=(action "fromSelectedFeatures") }}</a></div>
    --}}
  </div>

</div>


<div>
  <span>Features Input</span>
  <span class="badge" style="margin-left:3em">{{activeFeatureList.featureNameList.length}}</span>

  {{textarea
    value=featureNameList
    class="form-control"
    maxLength=15
    enter=(action 'featureNameListInput')
    placeholder="Feature (Marker/Gene) Names\n(whitespace or comma separated)" }}
</div>


<hr >
