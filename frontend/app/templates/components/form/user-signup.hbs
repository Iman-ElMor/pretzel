{{#form/auth-base title="Sign Up" errorMessage=errorMessage}}
  {{#if isRegistered}}
    {{#elem/panel-form
      name="success"
      heading="Success"}}
      {{successMessage}}
    {{/elem/panel-form}}
  {{else}}
    <form {{action 'submitForm' on='submit'}}>
      {{auth-input
        type='text'
        value=email
        placeholder='Your Email Address'}}
      {{auth-input
        type='password'
        value=password
        placeholder='Enter a New Password'}}
      <p>Once your account is approved by an administrator, you will be able to log in with the email address and password you enter here.</p>
      {{suggest-link
        suggest-text="Already a member?"
        link-name="login"
        link-pretty="Log In"}}
      {{elem/button-submit loading=isProcessing}}
    </form>
  {{/if}}
{{/form/auth-base}}
