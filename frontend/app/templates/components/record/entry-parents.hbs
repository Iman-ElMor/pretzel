<ul>
  {{#each-in dataTree as |key value|}}
    <li  class="list-group-item list-group-item-info" >
      {{elem/button-base
      classSize='xs'
      classColour='default'
      icon=expandIcon
      onClick=(action "switch")
      }}
      <span title={{key}} class="truncate" style="flex: 1;">
      {{key}}
    </span>

      {{#if layout.active}}
        {{record/entry-scopes
          loadBlock="loadBlock"
          data=value}}
      {{/if}}
    </li>
  {{/each-in}}
</ul>
