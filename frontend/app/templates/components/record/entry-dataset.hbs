<li class="list-group-item list-group-item-info">
  {{#if notEditing }}
    {{elem/button-base
      classSize='xs'
      classColour='default'
      icon=expandIcon
      onClick=(action "switchDataset" dataset)}}
  {{/if}}
  {{record/entry-record 
    entry=dataset 
    setEditing="setEditing"
    onDelete="onDelete"}}
</li>
{{#if layout.active}}
  {{#each data as |block|}}
    <li 
      class="list-group-item {{if (compare block.id '===' selectedBlock.id) 'list-group-item-warning'}}"
      {{action "selectBlock" block on="click"}}>
      {{!-- {{elem/icon-base-owner state=block.owner}} --}}
      {{!-- {{elem/icon-visible state=block.public}} --}}
      <span class="">
        {{!-- {{elem/button-base
          classSize='xs'
          classColour='info'
          icon='info-sign'
          onClick=(action "selectBlock" block)}} --}}
        {{#if block.isSelected}}
          {{!-- {{#link-to "mapview" (query-params mapsToView=block.blockLink)}}
            {{elem/button-base
              classSize='xs'
              classColour='danger'
              icon='minus'}}
          {{/link-to}} --}}
        {{else}}
          {{#link-to "mapview" (query-params mapsToView=block.blockLink)}}
            {{elem/button-base
              classSize='xs'
              classColour='success'
              icon='plus'}}
          {{/link-to}}
        {{/if}}
      </span>
      {{record/entry-block
        entry=block}}
      <p class="list-group-item-text">
        {{#each block.tags as |tag|}}
          <span
            class="label label-default"
            style="display: inline-block">
            {{tag}}
          </span>
        {{/each}}
      </p>
    </li>
  {{/each}}
{{/if}}