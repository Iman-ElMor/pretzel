<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    Add map
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu multi-level" role="menu">
  {{#each availableMaps as |mymap|}}
  <li class="dropdown-submenu">
    <a tabindex="-1" href="#">{{mymap.name}}</a>
    {{#each mymap.chromosomes as |chr|}}
    <ul class="dropdown-menu">
      {{#if chr.isSelected}}
      <li class="disabled">
        {{#link-to "mapview" (query-params mapsToView=chr.chrLink)}}
          {{chr.name}}
        {{/link-to}}
      </li>
      {{else}}
      <li class="enabled">
        {{#link-to "mapview" (query-params mapsToView=chr.chrLink)}}
          {{chr.name}}
        {{/link-to}}
      </li>
      {{/if}}
    </ul>
    {{/each}}
  </li>
  {{/each}}
  </ul>
</div>

<br/>
<br/>

Maps to align:

<ul>
{{#each selectedMaps as |chr|}}
  <li>{{chr.name}} {{#link-to "mapview" (query-params mapsToView=chr.chrDeleteLink)}}Delete{{/link-to}}</li>
{{/each}}
</ul>
<div class="drawing-controls">
      {{input type="checkbox" checked=isShowUnique class="toggle"}}
      <label {{action "toggleShowUnique" on="doubleClick"}}>toggleShowUnique</label>
</div>

{{#if hasData}}
  {{draw-map updatedSelectedMarkers='updateSelectedMarkers' data=model isShowUnique=isShowUnique}}


