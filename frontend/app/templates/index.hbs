{{#elem/embed-html path="landingPageContent" as |landingPageContent|}}

{{!-- This is useful for experimenting with path of static landingPageContent files, without having to rebuild.  --}}
{{#if false}}
<div>
  {{input type="text" value=landingPageContentFileName }}
</div> 
{{/if}}

{{!-- log landingPageContent.promise --}}
{{#if (is-rejected landingPageContent.promise)}}
  <div class="jumbotron">
    <h1>Pretzel</h1>
    <p>An Express/Ember/D3 framework to display and interactively navigate complex datasets.</p>
    <p>Developed by
      - AgriBio, Department of Economic Development, Jobs, Transport and Resources (DEDJTR), Victoria,
      Australia;
      - CSIRO, Canberra, Australia.

      Funded by the Grains Research Development Corporation (GRDC).
    </p>
  </div>

  <div style="display:none;">
    <hr>
    {{ landingPageContent.promise.reason }}
  </div> 

{{else}}
  <div class="landingPageContent">
    {{{await landingPageContent.promise}}}
  </div>
{{/if}}

{{/elem/embed-html}}
